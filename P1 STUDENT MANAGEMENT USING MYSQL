USE STUDENT_MANAGEMENT;
SHOW TABLES;
SELECT *FROM STUDENT_MANAGEMENT.TEACHERS_DETAILS;
--UPDATE
UPDATE STUDENT_MANAGEMENT.USER_LOGIN
SET FIRST_NAME='KATHIR'
WHERE LAST_NAME='VEL';
--FILTER ROWS BASED ON SPECIFIED CONDITIONS
SELECT*FROM STUDENT_MANAGEMENT.TEACHERS_DETAILS WHERE
FIRST_NAME='DIVYA';
--COMBINES MULTIPLE CONDITIONS IN A WHERE CLAUSE
SELECT*FROM STUDENT_MANAGEMENT.CLASS_DETAILS
WHERE CLASS_TEACHER=501 OR CLASS_YEAR=2025;
--SELECT UNIQUE VALUES FROM A STUDENT_MANAGEMENT.TEACHERS_DETAILS
SELECT DISTINCT FIRST_NAME
FROM STUDENT_MANAGEMENT.TEACHERS_DETAILS;
SELECT * FROM STUDENT_MANAGEMENT.USER_LOGIN 
WHERE EMAIL_ID LIKE 'KV@GMAIL.COM';
--UPDATE
UPDATE STUDENT_MANAGEMENT.user_login
SET USER_PASSWORD='NEWPASS456'
WHERE USER_ID=1;
--DELETE
DELETE FROM STUDENT_MANAGEMENT.user_login
WHERE USER_ID=1;
--LIMITING
SELECT*FROM STUDENT_MANAGEMENT.user_login
LIMIT 5;
--SAVE CHANGES
COMMIT;
--MARK A SAVE POINT
SAVEPOINT SAVE1;
