--STUDENT_MANAGEMENT PROJECT USING MYSQL
/*IN THESE PROJECT I CREATED VARIOUS TYPES OF TABLES UNDER
STUDENT_MANAGEMENT THEN LIST OUT SOME QUERY*/
CREATE DATABASE STUDENT_MANAGEMENT;
CREATE TABLE STUDENT_MANAGEMENT.USER_LOGIN(
    USER_ID INT PRIMARY KEY,
    USER_PASSWORD VARCHAR(20),
    FIRST_NAME VARCHAR(20),
    LAST_NAME VARCHAR(20),
    SIGN_UP_ON DATE,
    EMAIL_ID VARCHAR(40) UNIQUE
);
CREATE TABLE STUDENT_MANAGEMENT.PARENT_DETAILS(
    PARENT_ID INT PRIMARY KEY,
    FATHER_FIRST_NAME VARCHAR(20),
    FATHER_LAST_NAME VARCHAR(20),
    FATHER_EMAIL_ID VARCHAR(20),
    FATHER_MOBILE_NO INT,
    FATHER_OCCUPATION TEXT,
    MOTHER_FIRST_NAME VARCHAR(20),
    MOTHER_LAST_NAME VARCHAR(20),
    MOTHER_EMAIL_ID VARCHAR(20),
    MOTHER_MOBILE_NO INT,
    MOTHER_OCCUPATION TEXT
);
CREATE TABLE STUDENT_MANAGEMENT.TEACHERS(
    TEACHER_ID INT PRIMARY KEY,
    FIRST_NAME TEXT,
    LAST_NAME TEXT,
    EMAIL_ID VARCHAR(20),
    CONTACT VARCHAR(20),
    REGISTRATION_DATE VARCHAR(20),
    REGISTRATION_ID VARCHAR(20) UNIQUE
);
CREATE TABLE STUDENT_MANAGEMENT.CLASS_DETAILS(
    CLASS_ID INT PRIMARY KEY,
    CLASS_TEACHER VARCHAR(20) REFERENCES STUDENT_MANAGEMENT.TEACHERS(TEACHER_ID),
    CLASS_YEAR VARCHAR(20)
);
CREATE TABLE STUDENT_MANAGEMENT.STUDENT_DETAILS(
    STUDENT_ID VARCHAR(20),
    FIRST_NAME VARCHAR(20),
    LAST_NAME VARCHAR (20),
    CLASS_ID VARCHAR(20) REFERENCES STUDENT_MANAGEMENT.CLASS_DETAILS(CLASS_ID),
    ROLL_NO VARCHAR(10),
    EMAIL_ID VARCHAR(20),
    MOBILE_NO VARCHAR(20),
    PARENT_ID VARCHAR(20) REFERENCES STUDENT_MANAGEMENT.PARENT_DETAILS(PARENT_ID),
    REGISTRATION_DATE DATE,
    REGISTRATION_ID VARCHAR(10) UNIQUE
);
CREATE TABLE STUDENT_MANAGEMENT.SUBJECT(
SUBJECT_ID VARCHAR(20) PRIMARY KEY,
SUBJECT_NAME VARCHAR(20),
CLASS_YEAR INT,
SUBJECT_HEAD TEXT REFERENCES STUDENT_MANAGEMENT.TEACHERS(TEACHER_ID)
);
CREATE TABLE STUDENT_MANAGEMENT.SUBJECT_TUTORS(
    ROW_ID SERIAL PRIMARY KEY,
    SUBJECT_ID VARCHAR(20) REFERENCES STUDENT_MANAGEMNT.SUBJECT(SUBJECT_ID),
    TEACHER_ID VARCHAR(20) REFERENCES STUDENT_MANAGEMENT.TEACHERS(TEACHER_ID),
    CLASS_ID VARCHAR(20) REFERENCES STUDENT_MANAGEMENT.CLASS_DETAILS(CLASS_ID)
);
SHOW DATABASES;
